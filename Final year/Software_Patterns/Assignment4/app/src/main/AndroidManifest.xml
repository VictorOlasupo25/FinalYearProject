<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.victorolasupo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="SHOP"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.victorolasupo.ViewAllActivity"></activity>
        <activity android:name="com.example.victorolasupo.MyAddressesActivity" />
        <activity
            android:name="com.example.victorolasupo.AddAddressActivity"
            android:theme="@style/TealTheme" />
        <activity android:name="com.example.victorolasupo.DeliveryActivity" />
        <activity android:name="com.example.victorolasupo.OrderDetailsActivity" />
        <activity android:name="com.example.victorolasupo.ProductDetailsActivity" />
        <activity android:name="com.example.victorolasupo.CategoryActivity" />
        <activity
            android:name="com.example.victorolasupo.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.victorolasupo.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.example.victorolasupo.LoginActivity" />
        <activity
            android:name="com.example.victorolasupo.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>