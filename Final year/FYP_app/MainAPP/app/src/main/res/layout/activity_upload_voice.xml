<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".readAactivities.UploadVoiceActivity">

    <TextView
        android:id="@+id/txt_view_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_view"
        android:gravity="center"
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp"
        android:text="All recordings"
        android:textColor="#000"
        android:textSize="14dp"
        android:textStyle="bold" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottmLayout"
        android:layout_below="@+id/txt_view_record">

        <TextView
            android:id="@+id/paragraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginHorizontal="10dp"
            android:text="@string/paragraph_text"
             />
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/bottmLayout"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/hint_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/recording_text"
            android:textSize="14dp"
            android:layout_centerHorizontal="true"
            android:textColor="#000"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/hint_txt"
            android:layout_marginVertical="20dp">



        <TextView
            android:id="@+id/txt_recording"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text=""
            android:textColor="#000"
            android:textSize="14dp"
            android:textStyle="bold" />

        <Chronometer
            android:id="@+id/txt_counter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="00:00"
            android:textSize="14dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/recorder_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/circle_primary"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_mic_white" />


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>