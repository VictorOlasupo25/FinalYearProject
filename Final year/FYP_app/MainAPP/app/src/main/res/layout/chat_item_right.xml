<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingVertical="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:maxWidth="300dp"
        android:id="@+id/rightMessage"
        android:textSize="16sp"
        android:gravity="start|center"
        android:textColor="@color/white"
        android:background="@drawable/chat_item_right_bg"
        android:layout_alignParentEnd="true"
        android:paddingVertical="12dp"
        android:paddingHorizontal="15dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/rightImageCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center"
        app:cardElevation="1dp"
        android:translationZ="0dp"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/purple_700"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="300dp"
                android:scaleType="fitCenter"
                android:id="@+id/rightImageView"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rightImageText"
                android:textSize="16sp"
                android:visibility="gone"
                android:gravity="start|center"
                android:textColor="@color/white"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/rightAudioCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center"
        app:cardElevation="1dp"
        android:translationZ="0dp"
        android:visibility="visible"
        android:layout_marginStart="50dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/audio_layout"
            android:background="@color/purple_700"
            >

            <SeekBar
                android:id="@+id/rightSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/rightPlayBtn"
                />
            <ImageView
                android:id="@+id/rightPlayBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="stop"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_white"
                app:srcCompat="@drawable/ic_play_white" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>