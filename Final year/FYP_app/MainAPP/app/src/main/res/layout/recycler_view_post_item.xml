<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/read_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    android:translationZ="8dp"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/icon_layout"
                android:background="@drawable/user_icon_border">

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/user_icon_bg"
                android:src="@drawable/ic_profile"
                />
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/username"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/mont"
                android:translationY="10dp"
                android:textColor="@color/purple_500"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/icon_layout"
                android:layout_centerVertical="true"
                 />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/like"
                android:background="@drawable/corner_primary"
                android:layout_alignParentEnd="true"
                android:paddingHorizontal="8dp"
                android:paddingVertical="5dp"
                >

                <ImageView
                    android:id="@+id/likeImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_like" />

                <TextView
                    android:id="@+id/likedCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/likeImage"
                    android:textStyle="normal"/>

            </RelativeLayout>
        </RelativeLayout>




        <TextView
            android:id="@+id/textViewCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textStyle="normal"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/audio_layout"
            android:visibility="visible"
            android:paddingVertical="5dp"
            >

            <ImageView
                android:id="@+id/playBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="stop"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_play_circle" />
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@+id/playBtn"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageViewPostImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:minHeight="200dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/simple_placeholder" />



        <ImageView
            android:id="@+id/imageViewDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:visibility="gone"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_delete" />

    </LinearLayout>

</androidx.cardview.widget.CardView>